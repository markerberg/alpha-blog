<% if @article.errors.any? %>
<h2>following errors</h2>
<ul>
  <% @article.errors.full_messages.each do |m| %>
  <li><%= m %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @article do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %></br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to "Back to articles Listing", articles_path %>