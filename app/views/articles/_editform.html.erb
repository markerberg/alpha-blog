<%= render 'shared/errors', obj: @article %><!--since we render from shared file, obj is whats used in shared file, so we convert it to @article this way so it can be used in this form-->

  <div class = "row">
    <div class = "col-xs-12">
      <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class = "form-group">
          <div class = "control-label col-sm-2">
            <%= f.label :name %>
          </div>
          <div class = "col-sm-8">
            <%= f.text_field :name, class: "form-control", placeholder: "Name of Article", autofocus: true %>
           </div>
        </div><!--for form group-->
        <div class = "form-group">
          <div class = "control-label col-sm-2">
            <%= f.label :description %>
          </div>
          <div class = "col-sm-8">
            <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
          </div>
        </div><!--closing form group-->
        <div class = "form-group">
          <div class = "col-sm-offset-2 col-sm-10">
            <%= f.submit 'Update', class: "btn btn-primary btn-lg" %>
          </div>
        </div>
      <% end %>
      <div class = "col-xs-offset-5 col-xs-5">
        <%= link_to "[ Cancel and return to Articles ]", articles_path %>
      </div>
    </div>
  </div>